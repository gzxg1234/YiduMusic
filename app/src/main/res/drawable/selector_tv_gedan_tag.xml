<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:color="@color/textColorPrimaryInverse" android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorPrimary"/>
        </shape>
    </item>

    <item android:color="@color/textColorSecondary" android:state_pressed="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/textColorSecondary"/>
        </shape>
    </item>
</selector>