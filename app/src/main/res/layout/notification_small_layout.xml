<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/default_song_pic" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="16dp"
            tools:text="Love Yourself" />

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/textColorSecondary"
            android:textSize="14dp"
            tools:text="Justin" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/ibtn_play_pause"
        style="@style/NotificationButton.Small"
        android:src="@mipmap/ic_play_arrow_black_36dp" />

    <ImageButton
        android:id="@+id/ibtn_forward"
        style="@style/NotificationButton.Small"
        android:src="@mipmap/ic_skip_next_black_36dp" />

    <ImageButton
        android:id="@+id/ibtn_lrc"
        style="@style/NotificationButton.Small"
        android:src="@mipmap/ic_lyric_open_36dp" />

    <ImageButton
        android:id="@+id/ibtn_close"
        style="@style/NotificationButton.Small"
        android:padding="6dp"
        android:src="@mipmap/ic_close_black_24dp" />
</LinearLayout>